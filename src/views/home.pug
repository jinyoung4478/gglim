doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Noom
        main
            div#lobbyDiv
                form#roomNameForm
                    input#roomNameInput(placeholder="room name", required, type="text")
                    button#roomNameButton Enter Room
                h4 Open Rooms:
                ul#roomList
            div#roomDiv
                h3#roomTitle
                ul#messageUl
                form#nicknameForm
                    input#nicknameInput(placeholder="nickname", type="text")
                    button#nicknameButton Send
                form#messageForm
                    input#messageInput(placeholder="message", required, type="text")
                    button#messageButton Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 
